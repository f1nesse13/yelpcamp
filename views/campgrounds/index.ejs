<% include ../partials/header %>

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1><span class="glyphicon glyphicon-tent"></span> Welcome to YelpCamp!</h1>
            <p>View our hand-picked campgrounds from all over the world</p>
            <p>
            <a href="/campgrounds/new" class="btn btn-primary btn-lg">Add New Campground</a>
            </p>
        </div>
    </header>
    <div class="row">
       <div class="col-lg-12">
            <h3>Our Most Popular Campgrounds</h3>
        </div>
    </div>
        <div class="row text-center" style="display: flex; flex-wrap: wrap">
        <% campgrounds.forEach(function(place){ %>
            <div class="col-md-3 col-sm-6">
                    <div class="thumbnail">
                        <img src="<%= place.image %>">
                        <div class="caption">
                            <h4><%= place.name %></h4>
                            <p>
                            <a href="/campgrounds/<%= place._id %>" class="btn btn-info btn-xs">More Info</a>
                            </p>                        
                        </div>
                    </div>
                 </div>
            <% }); %>
        </div> 
        </div>




