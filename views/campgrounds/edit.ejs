<% include ../partials/header %>
<h1 style="text-align: center">Edit <%= campground.name %></h1>

<div class="container">
    <div class="row">
        <div style="width: 30%; margin: 25px auto;">
            <form method="POST" action="/campgrounds/<%= campground._id %>?_method=PUT">
                <div class="form-group">
                    <label for="name">Name</label>
                    <input class="form-control" type="text" id="name" name="name" value="<%= campground.name %>"></input>
                </div>
                <div class="form-group">
                    <label for="cost">Cost</label>
                    <input class="form-control" type="number" id="cost" name="cost" value="<%=campground.cost %>" min="0.01" step="0.01"></input>
                </div>
                <div class="form-group">
                    <label for="image">Image</label>
                    <input class="form-control" type="text" id="image" name="image" value="<%= campground.image %>"></input>
                </div>
                <div class="form-group">
                    <label for="description">Description</label>
                    <input class="form-control" type="text" id="description" name="description" value="<%= campground.description %>"></input>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
                    <a style="display: block; text-align: center" href="/campgrounds">Return to the campground page</a>
                <div class="form-group">
                    <label for="location">Location</label>
                    <input class="form-control" type="text" name="location" id="location" value="<%= campground.location %>">
                </div>
            </form>
        </div>
        

    </div>
</div>



<% include ../partials/footer %>